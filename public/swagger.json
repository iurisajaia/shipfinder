                                    "legal_name" : {
                                        "type": "string",
                                        "description": "Legal name",
                                        "example": "Re:soft"
                                    },
                                    "legal_id" : {
                                        "type": "string",
                                        "description": "Legal ID",
                                        "example": "3133"
                                    }
                                },
                                "required": ["phone", "password"]
