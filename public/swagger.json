                                        "example": "+1234567890"
                                    },
                                    "email": {
                                        "type": "string",
                                        "description": "User's email address",
                                        "example": "john@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "description": "User's password",
                                        "example": "12345678"
                                    },
                                    "user_role_id": {
                                        "type": "integer",
                                        "description": "User's role ID",
                                        "example": 1
