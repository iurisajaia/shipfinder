{
    "openapi": "3.0.0",
    "info": {
        "title": "Forwarder API",
        "version": "1.0.0"
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "/api/user/create/": {
            "post": {
                "tags" : ["User"],
                "summary": "Create User",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "firstname": {
                                        "type": "string",
                                        "description": "User's name",
                                        "example": "John"
                                    },
                                    "lastname": {
                                        "type": "string",
                                        "description": "User's last name",
                                        "example": "Doe"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "description": "User's phone number",
                                        "example": "+1234567890"
                                    },
                                    "email": {
                                        "type": "string",
                                        "description": "User's email address",
                                        "example": "john@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "description": "User's password",
                                        "example": "12345678"
                                    },
                                    "user_role_id": {
                                        "type": "integer",
                                        "description": "User's role ID",
                                        "example": 1
                                    },
                                    "legal_name" : {
                                        "type": "string",
                                        "description": "Legal name",
                                        "example": "Re:soft"
                                    },
                                    "legal_id" : {
                                        "type": "string",
                                        "description": "Legal ID",
                                        "example": "3133"
                                    }
                                },
                                "required": ["phone", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User Created successful"
                    },
                    "400": {
                        "description": "Bad request - Invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/user/login/": {
            "post": {
                "tags" : ["User"],
                "summary": "Login User",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "phone": {
                                        "type": "string",
                                        "description": "User's phone number",
                                        "example": "+1234567890"
                                    },
                                    "password": {
                                        "type": "string",
                                        "description": "User's password",
                                        "example": "12345678"
                                    }
                                },
                                "required": ["phone", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User Logged in successfully"
                    },
                    "400": {
                        "description": "Bad request - Invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/user": {
            "get": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "tags" : ["User"],
                "summary": "Current User",
                "responses": {
                    "200": {
                        "description": "Current user fetched successfully"
                    },
                    "400": {
                        "description": "Bad request - Invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/user/roles": {
            "get": {
                "tags" : ["User"],
                "summary": "User Roles",
                "responses": {
                    "200": {
                        "description": "User Roles fetched successfully"
                    },
                    "400": {
                        "description": "Bad request - Invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/user/verify": {
            "post": {
                "tags" : ["Auth"],
                "summary": "Verify User",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "otp": {
                                        "type": "integer",
                                        "description": "verification Code",
                                        "example": 123456
                                    },
                                    "phone": {
                                        "type": "integer",
                                        "description": "verification Code",
                                        "example": "+1234567890"
                                    }
                                },
                                "required": ["phone", "otp"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User Verified successful"
                    },
                    "400": {
                        "description": "Bad request - Invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/user/get-login-code": {
            "post": {
                "tags" : ["Auth"],
                "summary": "Get Login code",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "phone": {
                                        "type": "string",
                                        "description": "User Phone number",
                                        "example": "+1234567890"
                                    }
                                },
                                "required": ["phone"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Code sent successfully"
                    },
                    "400": {
                        "description": "Bad request - Invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    }
}
