{
    "openapi": "3.0.0",
    "info": {
        "title": "Forwarder API",
        "version": "1.0.0"
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "/api/user/update/": {
            "put": {
                "tags" : ["User"],
                "summary": "Update User",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "User's name",
                                        "example": "John Doe"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "description": "User's phone number",
                                        "example": "+1234567890"
                                    },
                                    "email": {
                                        "type": "string",
                                        "description": "User's email address",
                                        "example": "john@example.com"
                                    },
                                    "user_role_id": {
                                        "type": "integer",
                                        "description": "User's role ID",
                                        "example": 1
                                    }
                                },
                                "required": ["name", "phone", "email"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User Updated successful"
                    },
                    "400": {
                        "description": "Bad request - Invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/user/delete/{id}": {
            "delete": {
                "tags" : ["User"],
                "summary": "Delete User",
                "responses": {
                    "200": {
                        "description": "User Deleted successful"
                    },
                    "400": {
                        "description": "Bad request - Invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/user": {
            "get": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "tags" : ["User"],
                "summary": "Current User",
                "responses": {
                    "200": {
                        "description": "Current user fetched successfully"
                    },
                    "400": {
                        "description": "Bad request - Invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/user/verify": {
            "post": {
                "tags" : ["Auth"],
                "summary": "Verify User",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "otp": {
                                        "type": "integer",
                                        "description": "verification Code",
                                        "example": 123456
                                    }
                                },
                                "required": ["user_id", "otp"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User Verified successful"
                    },
                    "400": {
                        "description": "Bad request - Invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/user/get-login-code": {
            "post": {
                "tags" : ["Auth"],
                "summary": "Get Login code",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "phone": {
                                        "type": "string",
                                        "description": "User Phone number",
                                        "example": "+1234567890"
                                    }
                                },
                                "required": ["phone"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Code sent successfully"
                    },
                    "400": {
                        "description": "Bad request - Invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    }
}
